<div class="wrapper">
  <div class="form-wrapper">
    <h1 class="page-heading">新規登録</h1>
    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
      <%= render "shared/error_messages", model: f.object %>
      <div class="field">
        <%= f.label :nickname, "ニックネーム" %><br />
        <%= f.text_field :nickname, id: "user-name", class: "input-form"  %>
      </div>

      <div class="field">
        <%= f.label :email, "Eメール" %><br />
        <%= f.email_field :email, id: "user-email", class: "input-form", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード ※6文字以上" %><br />
        <%= f.password_field :password, id:" user-password", class: "input-form", autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
        <%= f.password_field :password_confirmation, id: "user-password-confirmation", class: "input-form", autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "登録する", class: "form-btn" %>
      </div>
    <% end %>
  </div>
</div>