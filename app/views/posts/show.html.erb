<div class="post-wrapper">
  <div class="post <%= border_color(@post) %>">
    <div class="post-header">
      <%= @post.feeling.name %>
    </div>
    <div class="post-image">
      <% if @post.image.attached? %>
        <%= link_to image_tag(@post.image), post_path(@post.id) %>
      <% else %>
        <%= link_to image_tag("alt_image.png"), post_path(@post.id) %>
      <% end %>
    </div>
    <div class="post-text">
      <%= link_to @post.text, post_path(@post.id) %>
    </div>
    <div class="post-footer">
      <div class="post-date">
        <%= l @post.created_at %>
      </div>
      <%= link_to "by #{@post.user.nickname}", "#" %>
    </div>  
  </div>
  <div class="post-manage">
    <% if user_signed_in? && current_user.id == @post.user_id %>
      <%= link_to "編集する", "#", class: "post-btn" %>
      <%= link_to "削除する", "#", method: :delete, class: "post-btn" %>
    <% end %>
  </div>
</div>